<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Profile"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        style="@style/AlertDialog.AppCompat"
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelStudent"
        android:text="Student Name"
        android:textSize="20dp"
        />
    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="130dp"
        android:id="@+id/nameStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/labelStudent"
        android:text="name"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/labelStudent" />
    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        style="@style/AlertDialog.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameStudent"
        android:text="Qualification"
        android:id="@+id/labeQualification"
        android:textSize="20dp"
        />
    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/labeQualification"
        android:layout_below="@+id/nameStudent"
        android:text="qualification"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/qualificationStudent"
        android:layout_toRightOf="@+id/labeQualification" />
    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        style="@style/AlertDialog.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qualificationStudent"
        android:text="University"
        android:textSize="20dp"
        android:id="@+id/labelUniversity"
        />
    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/universityStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/labelUniversity"
        android:layout_below="@+id/qualificationStudent"
        android:text="University"
        android:textSize="20dp"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/labelUniversity" />
    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        style="@style/AlertDialog.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/universityStudent"
        android:text="Email"
        android:textSize="20dp"
        android:id="@+id/labelEmail"
        />
    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/emailStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/labelEmail"
        android:layout_below="@+id/universityStudent"
        android:text="Email"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/labelEmail" />


</RelativeLayout>