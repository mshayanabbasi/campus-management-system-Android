<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/nameStudent"
        android:textSize="30dp"
        />
    <TextView
        android:layout_below="@+id/nameStudent"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/qualificationStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qualification"
        />
    <TextView
        android:layout_below="@+id/qualificationStudent"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/universityStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University"
        />
    <TextView
        android:layout_below="@+id/universityStudent"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/studentGpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA"
        />


</RelativeLayout>